name: BetonValue Surebet Scraper

on:
  workflow_dispatch:
  schedule:
    - cron: "*/15 * * * *" # hər 15 dəqiqədən bir

jobs:
  run-betonvalue:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          pip install -r requirements.txt

      - name: Run script
        run: |
          python main.py
